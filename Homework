import javax.swing.JOptionPane;
import java.util.Random;

public class Week7Lab1 
{

	public static void main(String[] args) 
	{
		String computerPlay = null;
		int randomPlay;
		int count=1;
		
		JOptionPane.showMessageDialog(null, "It's the Rock, Paper, Scissors game!");
		JOptionPane.showMessageDialog(null,  "Rock, Paper, and Scissors");
		
		Random generator = new Random();
		
		do
		{
			randomPlay = generator.nextInt(3)+1;
		
			if(randomPlay == 1)
				computerPlay = "Rock";
			else if(randomPlay == 2)
				computerPlay = "Paper";
			else if(randomPlay == 3)
				computerPlay = "Scissors";
		
			String myPlay =
					JOptionPane.showInputDialog("Enter your play: ");
			
			String message =
					String.format("Your play is %s", myPlay);
			JOptionPane.showMessageDialog(null, message);
			
			JOptionPane.showInputDialog(null, "The computer chose:", computerPlay );
		
			if(myPlay.equals(computerPlay))
			{
				JOptionPane.showMessageDialog(null, "It's a tie!");
			}
			else if(myPlay.equals("Rock"))
			{
				if(computerPlay.equals("Scissors"))
					JOptionPane.showMessageDialog(null, "Rock crushes scissors!");
			else if(computerPlay.equals("Paper"))
				JOptionPane.showMessageDialog(null, "Paper eats rock. You lose!");
			}
			else if(myPlay.equals("Paper"))
			{
				if(computerPlay.equals("Scissors"))
					JOptionPane.showMessageDialog(null, "Scissors cuts paper. You lose!");
				else if(computerPlay.equals("Rock"))
				System.out.println("Paper eats rock. You win!!");
			}
			else if(myPlay.equals("Scissors"))
			{
				if(computerPlay.equals("P"))
					JOptionPane.showMessageDialog(null,"Scissors cut paper. You lose!");
				else if(computerPlay.equals("Rock"))
					JOptionPane.showMessageDialog(null,"Rock breaks scissors. You lose!");
			}
			else
				JOptionPane.showMessageDialog(null, "Invalid Input.");
			count++;
		}
		while(count<=3);
	}
}
